import re

def check_password(password):
    strength = 0
    remarks = ""

    if len(password) >= 8:
        strength += 1
    else:
        remarks += "Password must be at least 8 characters long.\n"

    if re.search("[a-z]", password):
        strength += 1
    else:
        remarks += "Add lowercase letters.\n"

    if re.search("[A-Z]", password):
        strength += 1
    else:
        remarks += "Add uppercase letters.\n"

    if re.search("[0-9]", password):
        strength += 1
    else:
        remarks += "Add numbers.\n"

    if re.search("[@#$%^&*!?]", password):
        strength += 1
    else:
        remarks += "Add special characters (@,#,$,%,&,!,?,*).\n"

    if strength == 5:
        return "Strong Password ", remarks
    elif strength >= 3:
        return "Medium Password ", remarks
    else:
        return "Weak Password ", remarks

password = input("Enter your password: ")
status, suggestions = check_password(password)

print("\nPassword Status:", status)
print("\nSuggestions (if any):")
print(suggestions if suggestions else "No improvements needed!")